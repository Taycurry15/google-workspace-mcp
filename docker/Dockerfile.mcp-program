FROM node:20-alpine AS builder

WORKDIR /app

# Copy workspace root files
COPY package*.json ./
COPY tsconfig.json ./

# Copy shared packages
COPY packages/shared-core/ ./packages/shared-core/
COPY packages/shared-llm/ ./packages/shared-llm/
COPY packages/shared-workflows/ ./packages/shared-workflows/
COPY packages/shared-routing/ ./packages/shared-routing/

# Copy program server
COPY packages/mcp-program/ ./packages/mcp-program/

# Install dependencies
RUN npm ci

# Build all packages
RUN npm run build

# Production image
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY packages/shared-core/package*.json ./packages/shared-core/
COPY packages/shared-llm/package*.json ./packages/shared-llm/
COPY packages/shared-workflows/package*.json ./packages/shared-workflows/
COPY packages/shared-routing/package*.json ./packages/shared-routing/
COPY packages/mcp-program/package*.json ./packages/mcp-program/

# Install production dependencies only
RUN npm ci --production --workspaces

# Copy built files from builder
COPY --from=builder /app/packages/shared-core/dist/ ./packages/shared-core/dist/
COPY --from=builder /app/packages/shared-llm/dist/ ./packages/shared-llm/dist/
COPY --from=builder /app/packages/shared-workflows/dist/ ./packages/shared-workflows/dist/
COPY --from=builder /app/packages/shared-routing/dist/ ./packages/shared-routing/dist/
COPY --from=builder /app/packages/mcp-program/dist/ ./packages/mcp-program/dist/

# Expose port
EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3001/health', (res) => process.exit(res.statusCode === 200 ? 0 : 1))" || exit 1

# Set environment variables
ENV NODE_ENV=production \
    PORT=3001

# Start server
CMD ["node", "packages/mcp-program/dist/index.js"]
