{
  "name": "google-workspace-mcp",
  "version": "1.0.0",
  "description": "Google Workspace MCP Server with 30+ tools for Gmail, Drive, Sheets, Docs, Calendar, and Tasks",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "google-workspace-mcp": "./dist/index.js",
    "gw-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prepare": "npm run build",
    "setup-auth": "node dist/setup-auth.js",
    "create-folders": "tsc && node dist/create-folders.js",
    "create-sheets": "tsc && node dist/create-sheets.js",
    "test": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "quality": "npm run typecheck && npm run lint && npm run format:check"
  },
  "keywords": [
    "mcp",
    "google-workspace",
    "gmail",
    "google-drive",
    "google-sheets",
    "google-docs",
    "google-calendar",
    "google-tasks",
    "automation"
  ],
  "author": "Tay Daddy - The Bronze Shield",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "dotenv": "^17.2.3",
    "google-auth-library": "^9.15.0",
    "googleapis": "^144.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
