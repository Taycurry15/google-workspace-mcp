# Google Workspace MCP - Environment Configuration
# Copy to .env and customize if needed

# OAuth Credentials Path (default: project root)
CREDENTIALS_PATH=/Users/taycurry/Library/Mobile Documents/com~apple~CloudDocs/Projects/Google Workspace MCP/credentials.json

# OAuth Token Path (default: project root)
TOKEN_PATH=/Users/taycurry/Library/Mobile Documents/com~apple~CloudDocs/Projects/Google Workspace MCP/token.json

# Optional: Node environment
NODE_ENV=production

# LLM Router Configuration
# The new multi-provider LLM router intelligently selects models based on:
# - Task type (categorization, analysis, generation, etc.)
# - Cost optimization
# - Performance requirements
# - Latency requirements

# Required: At least one LLM provider API key
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here
GOOGLE_API_KEY=your_google_gemini_key_here

# Optional: Additional providers for more routing options
# GROQ_API_KEY=your_groq_key_here
# MISTRAL_API_KEY=your_mistral_key_here

# LLM Router Settings
LLM_ROUTER_ENVIRONMENT=production  # development|production|cost_optimized|high_quality|speed_optimized
LLM_DEFAULT_PROVIDER=anthropic     # anthropic|openai|google
LLM_DEFAULT_MODEL=claude-sonnet-4.5
LLM_ENABLE_FALLBACK=true
LLM_ENABLE_COST_TRACKING=true
LLM_COST_LIMIT_PER_DAY=100  # Daily cost limit in USD

# Debug logging for LLM provider selection (true/false)
DEBUG_LLMS=false

# Optional PARA settings
PARA_CONFIDENCE_THRESHOLD=0.7
PARA_AUTO_ARCHIVE_DAYS=90

# PMO Configuration
# PMO spreadsheet ID (extract from spreadsheet URL or use DRC PMO AI project spreadsheet)
PMO_SPREADSHEET_ID=your_pmo_spreadsheet_id_here
PMO_DELIVERABLES_RANGE=Deliverables!A2:J100
PMO_RISKS_RANGE=Risks!A2:J100
PMO_EVM_RANGE=EVM!A2:G100
PMO_STAKEHOLDERS_RANGE=Stakeholders!A2:G100

# PMO Proposal Processing
PMO_SESSION_TIMEOUT_MINUTES=60

# Program Management Spreadsheet (Phase 2)
# Created by running: npm run create-program-spreadsheet
PROGRAM_SPREADSHEET_ID=your_program_spreadsheet_id_here

# Document Management Spreadsheet (Phase 3)
# Created by running: npm run create-document-spreadsheet
DOCUMENT_SPREADSHEET_ID=your_document_spreadsheet_id_here

# Program Root Folder in Google Drive
# The parent folder where all program folder structures are created
# Get folder ID from Drive URL: /folders/{FOLDER_ID}
PROGRAM_ROOT_FOLDER_ID=your_drive_folder_id_here

# Multi-Server Architecture (Phase 8+)
# Server URLs for cross-server communication
# Leave blank if running monolithic server
MCP_PROGRAM_URL=http://localhost:3001
MCP_DELIVERABLES_URL=http://localhost:3002
MCP_SUBCONTRACT_URL=http://localhost:3003
MCP_COMPLIANCE_URL=http://localhost:3004
MCP_FINANCIAL_URL=http://localhost:3005

# Subcontract Management Spreadsheet
SUBCONTRACT_SPREADSHEET_ID=your_subcontract_spreadsheet_id_here

# Financial Management Spreadsheet
FINANCIAL_SPREADSHEET_ID=your_financial_spreadsheet_id_here
